@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["Message"] is not null)
{
    <div class="alert alert-success">
        @TempData["Message"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

<a asp-action="Create" class="btn btn-success">Add new Employee</a>

@if(Model.Count() > 0)
{
    <div class="row mt-4">
        <div class="col-md-6">
            <from class="d-flex" asp-actoin="Index" asp-controller="Employee">
                <input name="SearchString" class="form-control me-1" type="search" placeholder="Search" aria-label="Search"/>
                <button class="btn btn-primary" type="submit">Search</button>
            </from>
        </div>
        <div class="col-md-6">
            <a asp-action="Index" class="btn btn-light">Full list</a>
        </div>
    </div>

    <h1 class="mt-4">All Employees</h1>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <td>@Html.DisplayNameFor(E => E.Name)</td>
            <td>@Html.DisplayNameFor(E => E.Age)</td>
            <td>@Html.DisplayNameFor(E => E.Addres)</td>
            <td>@Html.DisplayNameFor(E => E.Salary)</td>
            <td>@Html.DisplayNameFor(E => E.Department)</td>
            <td>@Html.DisplayNameFor(E => E.Email)</td>
            <td>@Html.DisplayNameFor(E => E.PhoneNumber)</td>
            <td>@Html.DisplayNameFor(E => E.HireDate)</td>
            <td>@Html.DisplayNameFor(E => E.IsActive)</td>
            <td>Details</td>
            <td>Update</td>
            <td>Delete</td>
        </thead>
        <tbody>
            @foreach(var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Addres</td>
                    <td>@Html.DisplayFor(E => employee.Salary)</td>
                    <td>@Html.DisplayFor(E => employee.Department.Name)</td>
                    <td>@Html.DisplayFor(E => employee.Email)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.HireDate</td>
                    <td>
                        @if (employee.IsActive)
                        {
                            <i class="fa-solid fa-circle" style="color:green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle" style="color:red"></i>
                        }
                    </td>
                    <partial name="_ButtonsPartialView" model="@employee.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no employees</h3>
    </div>
}


